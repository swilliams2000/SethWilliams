<script type="module">
  const typedText = document.getElementById("typed-text");
  const cursor = document.querySelector(".blinking-cursor");
  const textParts = ["howdy, ", "Seth", " here."];
  let part = 0;
  let subIndex = 0;

  function type() {
    if (part < textParts.length) {
      // Build typed content so far
      let typedSoFar = "";
      for (let i = 0; i < part; i++) {
        if (i === 1) {
          typedSoFar += `<span class="glow-text">${textParts[i]}</span>`;
        } else {
          typedSoFar += textParts[i];
        }
      }

      // Append current character of current part
      let currentChar = textParts[part].slice(0, subIndex + 1);
      if (part === 1) currentChar = `<span class="glow-text">${currentChar}</span>`;
      typedText.innerHTML = typedSoFar + currentChar;

      subIndex++;
      if (subIndex >= textParts[part].length) {
        subIndex = 0;
        part++;
      }

      setTimeout(type, 120);
    } else {
      cursor.classList.add("blink");
      document.querySelector('.animate-fade-in').classList.add('opacity-100');
    }
  }

  type();
</script>

<style>
  .blinking-cursor {
    display: inline-block;
    width: 1ch;
    animation: blink 1s step-start infinite;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  /* Fade-in for rest of content */
  .animate-fade-in {
    transition: opacity 1s ease-in-out;
  }

  /* Subtle yellow glow for "Seth" */
  .glow-text {
    display: inline-block;
    color: #fff;
    animation: glow-pulse 2s ease-in-out infinite;
    text-shadow: 0 0 4px #facc15;
  }

  @keyframes glow-pulse {
    0%, 100% {
      text-shadow: 0 0 4px #facc15;
    }
    50% {
      text-shadow: 0 0 10px #facc15;
    }
  }
</style>


