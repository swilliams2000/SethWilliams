---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5">{description}</p>

    <!-- Polaroid wrapper -->
    <div class="relative w-64 flex-shrink-0">
      
      <!-- Faded light blue background -->
      <div class="absolute top-2 left-2 w-full h-full bg-blue-200 rounded-2xl opacity-30 
                  transform rotate-[5deg] transition-opacity duration-500 
                  hover:opacity-0 z-0"></div>

      <!-- Polaroid container -->
      <div
        class="relative z-10 bg-white p-4 transform rotate-[5deg] md:rotate-[7deg] 
               transition-transform duration-500 hover:rotate-0 shadow-lg"
      >
        <!-- Image -->
        <div class="overflow-hidden rounded-t-xl">
          <Image
            class="object-cover w-full h-64"
            src={image}
            width="260"
            height="260"
            alt={name}
          />
        </div>

        <!-- Bottom polaroid frame -->
        <div class="bg-white h-16 w-full mt-4"></div>
      </div>
    </div>
  </div>
</Section>
