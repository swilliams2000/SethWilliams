---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class={`flex flex-col md:flex-row gap-12 md:gap-8 ${Astro.props.class ?? ""}`}>
    <div class="flex flex-col items-start w-full md:w-auto">
      <p class="w-auto text-base text-neutral md:pr-5" set:html={description}></p>
      <p class="mt-6 text-base text-neutral">
        When I'm not coding, you‚Äôll find me playing soccer, tennis, and volleyball, cheering for the Steelers, or experimenting with new recipes in the kitchen!
      </p>
      <div class="flex justify-center gap-3 mt-2 text-2xl self-center">
        <span class="transition-transform duration-200 hover:scale-125 cursor-pointer">‚öΩ</span>
        <span class="transition-transform duration-200 hover:scale-125 cursor-pointer">üéæ</span>
        <span class="transition-transform duration-200 hover:scale-125 cursor-pointer">üèê</span>
        <span class="transition-transform duration-200 hover:scale-125 cursor-pointer">üèà</span>
        <span class="transition-transform duration-200 hover:scale-125 cursor-pointer">üç≥</span>
      </div>
      <!-- Bubbles Section -->
      <div class="flex gap-6 mt-6 justify-center w-full">
        <!-- Education Bubble -->
        <div class="flex flex-col items-center p-3 rounded-xl bg-gray-900/80 shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-1 hover:scale-[1.04] duration-300 w-64 text-center">
          <div class="flex items-center justify-center mb-3">
            <img
              src="/Education.svg"
              alt="Education"
              class="w-10 h-10 object-contain mr-2"
              style="filter: invert(27%) sepia(98%) saturate(747%) hue-rotate(203deg) brightness(97%) contrast(101%);"
            />
            <h3 class="font-bold text-white text-xl">Education</h3>
          </div>
          <ul class="list-none space-y-1">
            <li class="text-sm text-neutral">B.Sc Chemical Engineering</li>
            <li class="text-sm text-neutral">University of South Florida</li>
            <li class="text-sm text-neutral">Graduated May 2023</li>
            <li class="text-sm text-neutral">GPA: 3.81/4.0</li>
          </ul>
        </div>
        <!-- Skills Bubble -->
        <div class="flex flex-col items-center p-3 rounded-xl bg-gray-900/80 shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-1 hover:scale-[1.04] duration-300 w-64 text-center">
          <div class="flex items-center justify-center mb-3">
            <img
              src="/Skills.svg"
              alt="Skills"
              class="w-10 h-10 object-contain mr-2"
              style="filter: invert(27%) sepia(98%) saturate(747%) hue-rotate(203deg) brightness(97%) contrast(101%);"
            />
            <h3 class="font-bold text-white text-xl">Skills</h3>
          </div>
          <ul class="list-none space-y-1">
            <li class="text-sm text-neutral">Typescript</li>
            <li class="text-sm text-neutral">React.js</li>
            <li class="text-sm text-neutral">Java</li>
            <li class="text-sm text-neutral">C#</li>
            <li class="text-sm text-neutral">Python</li>
          </ul>
        </div>
      </div>
    </div>
    <!-- Polaroid container -->
    <div
      class="w-64 flex-shrink-0 bg-white p-4 transform rotate-[5deg] md:rotate-[7deg] 
             transition-transform duration-500 hover:rotate-0 shadow-lg"
    >
      <div class="overflow-hidden rounded-t-xl">
        <Image
          class="object-cover w-full h-80"
          src={image}
          width="260"
          height="260"
          alt={name}
        />
      </div>
      <div class="bg-white h-16 w-full mt-4"></div>
    </div>
  </div>
</Section>



