---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { HeroProps } from "@types";

type Props = {
  about: {
    intro: string;
    skills: string[];
    bio: string;
    image: string;
  };
  name: string;
};

const { about, name } = Astro.props as Props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    
    <!-- Text content -->
    <div class="w-full md:w-auto md:pr-5">
      <p class="text-base text-neutral mb-4" set:html={about.intro}></p>

      <ul class="list-disc list-inside mb-4 space-y-2">
        {about.skills.map((skill: string) => (
          <li>{skill}</li>
        ))}
      </ul>

      <p class="text-base text-neutral" set:html={about.bio}></p>
    </div>

    <!-- Polaroid container -->
    <div
      class="w-64 flex-shrink-0 bg-white p-4 transform rotate-[5deg] md:rotate-[7deg] 
             transition-transform duration-500 hover:rotate-0 shadow-lg"
    >
      <div class="overflow-hidden rounded-t-xl">
        <Image
          class="object-cover w-full h-64"
          src={about.image}
          width="260"
          height="260"
          alt={name}
        />
      </div>
      <div class="bg-white h-16 w-full mt-4"></div>
    </div>
  </div>
</Section>


