---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-start gap-6 md:flex-row md:gap-12">

    <!-- Text content -->
    <div class="w-full md:w-3/5 text-white text-base" set:html={description}></div>

    <!-- Polaroid container pushed further right -->
    <div class="w-full md:w-64 md:ml-12 flex-shrink-0">
      <div
        class="bg-white p-4 transform rotate-[5deg] md:rotate-[7deg] 
               transition-transform duration-500 hover:rotate-0 shadow-lg"
      >
        <div class="overflow-hidden rounded-t-xl">
          <Image
            class="object-cover w-full h-64"
            src={image}
            width="260"
            height="260"
            alt={name}
          />
        </div>
        <div class="bg-white h-16 w-full mt-4"></div>
      </div>
    </div>

  </div>
</Section>

