---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5">{description}</p>
    
    <div class="w-64 h-80 perspective-[1000px]">
      <div
        class="w-full h-full rounded-2xl bg-[#1c232d]/80 overflow-hidden shadow-xl transform rotate-x-[10deg] rotate-y-[-10deg] transition-transform duration-500 hover:rotate-x-0 hover:rotate-y-0 hover:scale-105"
      >
        <Image
          class="w-full h-full object-cover"
          src={image}
          width="260"
          height="260"
          alt={name}
        />
      </div>
    </div>

  </div>
</Section>
