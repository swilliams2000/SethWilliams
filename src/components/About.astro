---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5">{description}</p>

    <!-- Polaroid container -->
    <div class="relative w-64 group">
      <!-- Polaroid card -->
      <div
        class="bg-white rounded-2xl shadow-lg p-4 transform -rotate-6 transition-transform duration-500 group-hover:rotate-0"
      >
        <!-- Image part -->
        <div class="overflow-hidden rounded-t-xl">
          <Image
            class="object-cover w-full h-64"
            src={image}
            width="260"
            height="260"
            alt={name}
          />
        </div>
        <!-- White bottom frame for polaroid -->
        <div class="mt-4 h-12 w-full bg-white rounded-b-xl"></div>
      </div>
    </div>
  </div>
</Section>
