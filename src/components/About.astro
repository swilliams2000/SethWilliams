---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5" set:html={description}></p>

    <!-- Polaroid container -->
    <div
      class="w-64 flex-shrink-0 bg-white p-4 transform rotate-[5deg] md:rotate-[7deg] 
             transition-transform duration-500 hover:rotate-0 shadow-lg"
    >
      <!-- Image -->
      <div class="overflow-hidden rounded-t-xl">
        <Image
          class="object-cover w-full h-64"
          src={image}
          width="260"
          height="260"
          alt={name}
        />
      </div>

      <!-- Bottom polaroid frame -->
      <div class="bg-white h-16 w-full mt-4"></div>
    </div>
  </div>
</Section>



