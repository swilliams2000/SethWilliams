---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5">{description}</p>

    <div class="relative w-64 group">
      <!-- Light blue faded rectangle behind -->
      <div class="absolute top-2 left-2 w-full h-full bg-blue-200 rounded-2xl opacity-40 transform -rotate-3 transition-opacity duration-500 group-hover:opacity-0"></div>

      <!-- Polaroid card -->
      <div
        class="relative z-10 bg-white rounded-2xl shadow-xl transform -rotate-6 transition-transform duration-500 group-hover:rotate-0"
      >
        <!-- Image -->
        <div class="overflow-hidden rounded-t-2xl">
          <Image
            class="object-cover w-full h-80"
            src={image}
            width="260"
            height="260"
            alt={name}
          />
        </div>
        <!-- Bottom polaroid border -->
        <div class="h-12 w-full bg-white"></div>
      </div>
    </div>
  </div>
</Section>
