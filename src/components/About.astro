---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5">{description}</p>

    <div class="relative w-64 h-[360px] group">
      <!-- Blue background -->
      <div
        class="absolute inset-0 rounded-2xl bg-[#2563eb] opacity-0 transform rotate-[-3deg] transition-opacity duration-700 group-hover:opacity-30"
      ></div>

      <!-- Polaroid card -->
      <div
        class="relative z-10 bg-white rounded-2xl shadow-xl p-4 flex flex-col justify-end transform -rotate-[10deg] transition-transform duration-700 group-hover:rotate-0"
      >
        <div class="overflow-hidden rounded-xl">
          <Image
            class="object-cover w-full h-64"
            src={image}
            width="260"
            height="260"
            alt={name}
          />
        </div>
        <!-- Polaroid bottom border -->
        <div class="mt-4 h-16 w-full bg-white"></div>
      </div>
    </div>
  </div>
</Section>

