---
import Menu from "@icons/Menu.astro";
import { Image } from "astro:assets";
import type { HeaderProps } from "@types";

type Props = HeaderProps;
const { siteLogo, navLinks } = Astro.props;
---

<header class="sticky top-0 z-50 flex items-center justify-between px-5 py-4 max-w-5xl mx-auto bg-black">
  <!-- Left side: Logo + Navigation -->
  <div class="flex items-center gap-6">
    <!-- Logo -->
    <a href="/" aria-label="Home link">
      <Image
        src={siteLogo}
        width="45"
        height="45"
        alt="website logo"
        class="rounded-full"
      />
    </a>

    <!-- Navigation -->
    <nav>
      <ul class="flex gap-6">
        {navLinks.map((link) => (
          <li class="relative">
            <a
              href={link.href}
              class="text-neutral text-sm font-medium transition-colors hover:text-white relative after:absolute after:bottom-0 after:left-1/2 after:h-1 after:w-1 after:-translate-x-1/2 after:content-['â€¢'] after:opacity-0 hover:after:opacity-100"
            >
              {link.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>

  <!-- Right side: Social Icons (keep empty or add later) -->
  <div class="flex gap-4">
    <!-- Empty for now -->
  </div>
</header>






